<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlBottomViewAccountWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="@dimen/_10sdp">

    <ImageView
            android:id="@+id/imgIndicator"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/indicator" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLsitAccountWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgIndicator"
            android:layout_margin="@dimen/_10sdp" />

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llBottomNewAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvLsitAccountWallet"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/btnCreateNewAccountWallet"
                style="@style/Aw.Typography.Title.SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/text_create_new_account"
                android:textColor="@color/accent"
                android:textSize="@dimen/_12sdp" />

        <TextView
                android:id="@+id/btnImportAccountWallet"
                style="@style/Aw.Typography.Title.SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/text_import_account"
                android:textColor="@color/accent"
                android:textSize="@dimen/_12sdp" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>

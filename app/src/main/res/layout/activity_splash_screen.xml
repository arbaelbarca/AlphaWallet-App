<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.splashscreen.SplashScreenActivity">

    <TextView
            android:id="@+id/tvSpecta"
            style="@style/Aw.Typography.Title.XLarge.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/text_specta"
            android:textAllCaps="true"
            android:textSize="@dimen/_45sdp" />

    <TextView
            style="@style/Aw.Typography.Title.Large.SemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSpecta"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/text_crypto_wallet"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_15sdp" />


</RelativeLayout>
